{% extends 'base.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block body %}
<style>
    .logoCC{ border: 1px solid black; box-shadow: 0 0 10px white; margin:0 auto; max-width: 40rem; width: 95%; height: 80%; max-height: 30rem; background-color: rgb(222, 182, 117)}
    .logo{ max-width:100%; max-height:100%;}
    .button{background-color: #ffffff; border: 1px solid black; box-shadow: 0 0 10px white;}
</style>

<div class="d-flex align-items-center h-100">
    <div class="d-flex logoCC rounded-2 align-items-center ">
        <form method="post" class="mx-auto w-75">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% for message in app.flashes %}
                <div class="alert alert-success">
                    {{message}}
                </div>
            {% endfor %}
            
            <h1 class="h3 font-weight-normal mb-4">Veuillez vous identifier</h1>
            
            <label for="identifiant">Identifiant:</label>
            <input type="text"  name="identifiant" id="identifiant" class="form-control mt-2 mb-4"  required autofocus>
            <label for="password">Mot de Passe:</label>
            <input type="password" name="password" id="password" class="form-control my-2" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}" 
            >
            {# <p><a href="{{path('app_forgot_password_request')}}">Mot de passe oubli√©?</a></p> #}
            <label>
                <input type="checkbox" name="_remember_me" >
                Se souvenir de moi
            </label>

            <button class="btn my-3 button ms-3" type="submit">
                Se connecter
            </button>
        </form>
    </div>
</div>

{% endblock %}